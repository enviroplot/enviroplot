{
  "name": "enviro-reporter",
  "description": "Enviro Reporter React",
  "author": {
    "name": "Olga Zabelina"
  },
  "version": "4.0.7",
  "private": true,
  "main": "build/electron.js",
  "scripts": {
    "start": "cd client && npm run start",
    "build": "npm run build-ts && cd client && npm run build",
    "deployment-package": "npm run build && npm run electron-dist",
    "build-ts": "tsc --project ./tsconfig.json",
    "build-ts-dev": "tsc --project ./lib/tsconfig.dev.json",
    "electron-dist": "electron-builder",
    "electron": "electron . --remote-debugging-port=9444",
    "electron-dist:dir": "npm run electron-dist --dir -c.compression=store -c.mac.identity=null",
    "test": "jest --watch --silent=false"
  },
  "build": {
    "files": [
      "build/**/*"
    ],
    "extraFiles": [
      "data/**/*"
    ],
    "win": {
      "icon": "build/icon.ico",
      "target": "msi",
      "certificateFile": "C:\\cert.pfx",
      "certificatePassword": "olya_2001",
      "timeStampServer": "http://timestamp.digicert.com"
    },
    "msi": {
      "perMachine": true
    }
  },
  "jest": {
    "roots": [
      "<rootDir>/lib/src/tests"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.tsx?$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  },
  "prettier": {
    "printWidth": 120,
    "singleQuote": true,
    "jsxBracketSameLine": true,
    "bracketSpacing": false
  },
  "dependencies": {
    "browserslist": "^4.21.4",
    "date-fns": "^2.29.3",
    "electron-devtools-installer": "3.2.0",
    "electron-is-dev": "^1.0.1",
    "exceljs": "^4.3.0",
    "express": "^4.18.2",
    "fs-extra": "^11.1.0",
    "lodash": "^4.17.20",
    "pako": "1.0.10",
    "sass": "^1.57.1"
  },
  "devDependencies": {
    "@babel/core": "^7.20.12",
    "@babel/traverse": "^7.20.13",
    "@types/exceljs": "^1.3.0",
    "@types/jest": "26.0.0",
    "@types/lodash": "^4.14.191",
    "@types/mocha": "^10.0.1",
    "@types/node": "^18.11.18",
    "@typescript-eslint/eslint-plugin": "^5.52.0",
    "@typescript-eslint/parser": "^5.52.0",
    "copyfiles": "^2.4.1",
    "cors": "2.8.5",
    "electron": "13.6.9",
    "electron-builder": "23.6.0",
    "jest": "26.0.0",
    "mocha": "^10.2.0",
    "ts-jest": "26.0.0",
    "typescript": "^4.9.4"
  },
  "browserslist": {
    "development": [
      "last 2 chrome versions"
    ],
    "production": [
      "last 2 chrome versions"
    ]
  }
}
